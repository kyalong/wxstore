.view {
  width: 100%;
  display: flex;
  height: 64px;
  align-items: flex-end;
  justify-content: center;
}

.view>image {
  position: fixed;
  top: 0;
  left: 0;
  margin: 30px 16px 10px;
  width: 24px;
  height: 24px;
  background-color: transparent;
  transform: rotate(180deg);
}

.view>text {
  font-size: 1rem;
  margin: 30px 16px 12px;
  font-family: little2;
  transition: all 0.5s linear;
}

.main {
  display: flex;
  justify-content: flex-start;
  margin: 0.5rem 0;
  /* padding: 0.5rem 0; */
  border-bottom: solid 1px #f6f6f6;
  height: calc(48px - 1rem);
  font-size: medium;
}

