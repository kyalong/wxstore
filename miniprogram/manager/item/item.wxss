.feature {
  align-self: stretch;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0.5rem 0;
}

.content {
  font-size: medium;
}

.addspu {
  height: calc(64px - 0.5rem - 10px);
  display: flex;
  padding: 0 0.5rem 0.5rem 0.5rem;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 10px #f6f6f6;
}

.addspu>text:first-child {
  border: solid 1px #a16b47;
  color: #a16b47;
  border-radius: 3pt;
  padding: 0.25rem;
}

.spulist {
  display: flex;
  flex-direction: column;
}

.spu {
  border: solid 1px #f6f6f6;
  display: flex;
  justify-content: flex-start;
}

.spu image {
  height: 75px;
  width: 75px;
  padding: 0.5rem;
}

.spu>view {
  width: calc(100% - 75px - 1.5rem);
  display: flex;
  flex-direction: column;
  font-size: smaller;
  padding-right: 0.5rem;
  justify-content: space-evenly
}

.spu>view>text:nth-child(-n+2) {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.spu>view>view{
  display: flex;
  justify-content: space-between
}

