.view {
  width: 100%;
  display: flex;
  height: 64px;
  align-items: flex-end;
  justify-content: center;
}

.view>image {
  position: fixed;
  top: 0;
  left: 0;
  margin: 30px 16px 10px;
  width: 24px;
  height: 24px;
  background-color: transparent;
  transform: rotate(180deg);
}

.view>text {
  font-size: 1rem;
  margin: 30px 16px 12px;
  font-family: little2;
  transition: all 0.5s linear;
}

.table {
  display: flex;
  align-items: center;
  border-bottom: solid 10px #f6f6f6;
}

.simple {
  margin: 16px 0;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}

.simple>text {
  font-size: larger;
}

.left {
  border-right: solid 1px #a16b47;
}


.progress{
  padding: 16px 0;
  display: flex;
  align-items: center;
  border-bottom: solid 5px #f6f6f6
  
}
.progress>view:first-child{
  display: flex;
  justify-content: center;
  align-items: center;
  writing-mode: vertical-lr;
  flex-grow: 1

  
}
.circles{
  flex-grow: 2;
  display: flex;
  align-items: center;
  justify-content: center
}
.circle {
  height: 80px;
  width: 80px;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 0 5px #a16b47;
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin: 0 0.5rem; */

}
.content{
  align-self: stretch;
  /* flex-grow: 2; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* align-items: center; */
  font-size: medium;
  width: calc(100% / 2)


}
 