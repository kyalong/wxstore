.view>text {
  font-size: 1rem;
  margin: 30px 16px 12px;
  font-family: little2;
  transition: all 0.5s linear;
}

.main {
  width: 300px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.navi {
  width: 100px;
  height: 100px;
  border-radius: 5pt;
  box-shadow: 0 0 5px #a16b47;
  margin: 25px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #a16b47
}

.hoverc{
  background-color: #a16b47;
  color: white;
