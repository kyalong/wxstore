page {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.view {

  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  display: flex;
  height: 64px;
  align-items: flex-end;
  justify-content: center
}

