<view class='model1'>
  <view class='card' style='height:{{(1.414-0.414*0.414)*(w-2*16)}}px;width:{{(w-2*16)/1}}px;' bindtap='itemdetail' data-id='{{detail._id}}'>
    <image src='{{detail.image[0]}}' mode='aspectFill' style='' lazy-load='true'></image>
    <view class='item'>
      <view class='itemname'>{{detail.detail[1]}}</view>
      <view class='price'>
        <text>ï¿¥{{detail.price}}</text>
        <view class='icon' catchtap='addcart' data-id='{{detail._id}}'>
          <image src='../../images/cart.png'></image>
        </view>
      </view>
    </view>
  </view>
</view>