.card {
  display: flex;
  flex-direction: column;
  border: solid 1px #eee; 
  border-radius: 5px 5px 5px 5px;
  margin: 16px;
}

.card>image {
  background-color: #f6f6f6;
  width: 100%;
  height: 80.7%;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  z-index: 2;
}

.item {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0.5rem;
  /* border: solid 1px #eee;
  border-top: none;
  border-radius: 0 0 5px 5px; */
}

.itemname {
  font-size: 15pt;
}

.price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #a16b47;
}

.icon {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.icon>image {
  width: 25px;
  height: 25px;
  background-color: #f6f6f6;
}
