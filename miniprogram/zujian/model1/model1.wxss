.card{
  display: flex;
  flex-direction: column;
  margin: 10px;
  border: solid 1px #eee;
  border-radius: 5px;
}
.card>image{
  background-color: #f6f6f6;
  width: 100%;
  height: 75%;
  border-top-left-radius: 5pt;
  border-top-right-radius: 5pt;
}

.item {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 0.5rem 0.5rem;
}

.itemname {
  font-size: 13pt;
}

.price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #a16b47;
}

.icon {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.icon>image {
  width: 25px;
  height: 25px;
  background-color: #f6f6f6;
}