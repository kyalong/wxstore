.card {
  display: flex;
  flex-direction: column;
  /* border: solid 1px #eee;  */
  box-shadow: 0 0 1px silver;
  border-radius: 3px;
  margin: 0 16px 16px 16px;
}

.card>image {
  background-color: #f6f6f6;
  width: 100%;
  height: 80.7%;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}

.item {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0.5rem;
}

.itemname {
  font-size: medium;
}

.price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #a16b47;
  font-size: medium;
}

.icon {
  width: 33px;
  height: 33px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.icon>image {
  width: 23px;
  height: 23px;
  background-color: transparent;
}

.hoverc {
  opacity: 0.7;
}

.hoverb {
  background-color: silver;
}
