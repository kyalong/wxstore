<view class='model'>
  <block wx:for='{{items}}' wx:for-index='sku' wx:for-item='detail' wx:key=''>
    <view class='card' style='height:{{1.618*(w-3*16-4)/3}}px;width:{{(w-3*16-4)/3}}px;' bindtap='itemdetail' data-id='{{detail._id}}' hover='true' hover-class='hoverc' hover-start-time='10' hover-stay-time	='50'>
      <image src='{{detail.image[0]}}' mode='aspectFill' style='' lazy-load='true'></image>
      <view class='item'>
        <view class='texts'>
          <view class='itemname'>{{detail.detail[1]}}</view>
          <view class='price'>ï¿¥{{detail.price}}</view>
        </view>
        <!-- <view class='icon' catchtap='addcart' data-id='{{detail._id}}'>
          <image src='../../images/cart.png'></image>
        </view> -->
      </view>
    </view>
  </block>
</view>