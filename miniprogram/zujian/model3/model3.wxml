<wxs src='../../zujian/m.wxs' module='m' />
<view class='model'>
  <block wx:for='{{items}}' wx:for-index='sku' wx:for-item='detail' wx:key=''>
    <view class='card' style='height:{{1.618*(w-3*16-4)/3}}px;width:{{(w-3*16-4)/3}}px;' bindtap='itemdetail' data-id='{{detail._id}}' data-sku='{{detail.sku}}' hover='true' hover-class='hoverc' hover-start-time='50' hover-stay-time='100'>
      <image src='{{detail.fistimage}}' mode='aspectFill' style='' lazy-load='true'></image>
      <view class='item'>
        <view class='texts'>
          <view class='itemname'>{{detail.subtitle}}</view>
          <view class='price'>
             <text style='text-decoration: line-through;color:grey;font-size:smaller'>￥{{m.fix(detail.price)}}</text>
        <text>￥{{m.fix(detail.price*0.8)}}</text>
          </view>
        </view>
        <!-- <view class='icon' catchtap='addcart' data-id='{{detail._id}}'>
          <image src='../../images/cart2.png'></image>
        </view> -->
      </view>
    </view>
  </block>
</view>