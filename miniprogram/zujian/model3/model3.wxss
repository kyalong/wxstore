.model {
  display: flex;
  justify-content: space-between;
  margin:0 16px 16px 16px;
}

.card {
  display: flex;
  flex-direction: column;
  /* border: solid 1px #eee;  */
  /* box-shadow: 0 0 1px silver; */
  border-radius: 3px;

}

.card>image {
  width: 100%;
  height: 61.8%;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}

.item {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  padding: 0.5rem;

  align-items: center;

}

.texts {
  align-self: stretch;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* align-items: center */
}

.itemname {
  font-size: 3.3vw;
}

.price {
  color: #a16b47;
  font-size: 3.6vw
}

.icon {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.icon>image {
  width: 20px;
  height: 20px;
  background-color: #f6f6f6;
}
