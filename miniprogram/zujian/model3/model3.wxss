.model {
  display: flex;
  justify-content: space-between;
  margin: 10px;
}

.card {
  display: flex;
  flex-direction: column;
  border: solid 1px #eee;
  border-radius: 5px;
}

.card>image {
  width: 100%;
  height: 100%;
}

.item {
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
  margin: 0.25rem;
  font-size: smaller;
  align-items: center
}
.texts{
  display: flex;
  flex-direction: column;
}
.itemname {
  font-size: small
}

.price {
  color: #a16b47;
  font-size: small;
}

.icon {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.icon>image {
  width: 20px;
  height: 20px;
  background-color: #f6f6f6;
}
