.card {
  display: flex;
  flex-direction: column;
  /* border: solid 1px #eee;  */
  box-shadow: 0 0 1px #b87333;
  border-radius: 3px;
  margin: 0 16px 16px 16px;
}

.card>image {
  background-color: #f6f6f6;
  width: 100%;
  height: 70.7%;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}

.item {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0.5rem 0.5rem;
}

.itemname {
  font-size: medium;
}

.price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #a16b47;
  font-size: medium;
}
.price>view{
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.icon {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.icon>image {
  width: 25px;
  height: 25px;
  background-color: #f6f6f6;
}

.hoverc {
  opacity: 0.7;
}
