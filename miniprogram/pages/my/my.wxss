.view{
  height: 64px;
  width: 100%;
  position: fixed;
  top:0;
  left: 0;
  /* background-color: white; */
  z-index: 2
}


.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: calc(750rpx / 1.618)
}

.userinfo>button{
  background-color: transparent;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  color: #a16b47;
  font-family: little;
  margin-top: 64px
}
.userinfo>button::after{
  border: none
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  box-shadow: 0 0 10px #a16b47
}

.userinfo-nickname {
  color: black;
}

.userinfo-nickname::after {
  display: inline-block;
  content: '';
  height: 5px;
  width: 5px;
  border: solid 2px #a16b47;
  border-radius: 8px;
  position: relative;
  bottom: 15px;
  right: -5px;
}

.orderbar {
  display: flex;
  justify-content: space-between;
  padding: 0.5rem 0.5rem;
  font-size: smaller;
  border-bottom: solid 1px #f6f6f6;
  border-top: solid 10px #f6f6f6;
  align-items: center;
}
.orderbar>text:last-child{
  font-size: small;
}
.orderbar>text:last-child::after{
  text-align: right;
  content: '';
  display: inline-block;
  width: 6pt;
  height: 6pt;
  border-top: solid 2px gainsboro;
  border-right: solid 2px gainsboro;
  transform: rotate(45deg);
  margin-right: 0.5rem;
}

.bar {
  display: flex;
  justify-content: space-around;
  border-bottom: solid 10px #f6f6f6;
  padding: 1rem 0;
}

.bar image {
  width: 25px;
  height: 25px;
}

.bar text {
  margin-top: 0.25rem;
  font-size: small;
}

.baritem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.btn {
  border-bottom: dashed 1px #f6f6f6;
  background-color: white;
  padding: 1rem 0.5rem;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.btn>text {
  flex-grow: 1;
}

.btn::after {
  text-align: right;
  content: '';
  display: inline-block;
  width: 10pt;
  height: 10pt;
  border-top: solid 2px gainsboro;
  border-right: solid 2px gainsboro;
  transform: rotate(45deg);
  margin-right: 0.5rem;
}

.btn::before {
  display: inline-block;
  content: '';
  height: 5px;
  width: 5px;
  border: solid 2px #a16b47;
  border-radius: 8px;
  margin-right: 1rem;
}

.hoverc {
  background-color: #eee;
}
