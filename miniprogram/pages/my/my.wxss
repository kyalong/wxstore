page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  top: 10px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
}
.userinfo-nickname::after{
  display: inline-block;
  content: '';
  height: 5px;
  width: 5px;
  border: solid 2px #a16b47;
  border-radius: 8px;
  position: relative;
  bottom: 15px;
  right: -5px;
}

.bar{
  display: flex;
  justify-content: space-around;
  border-bottom: solid 10px #f6f6f6;
  padding: 1rem 0
}

.bar image{
  width: 25px;
  height: 25px
}
.bar text{
  margin-top: 0.25rem;
  font-size: small
}
.baritem{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}
.btn {
  border-bottom: dashed 1px #f6f6f6;
  background-color: white;
  padding: 1rem 0.5rem;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.btn>text{
  flex-grow: 1;
}
.btn::after {
  text-align: right;
  content: '';
  display: inline-block;
  width: 10pt;
  height: 10pt;
  border-top: solid 2px gainsboro;
  border-right: solid 2px gainsboro;
  transform: rotate(45deg);
  margin-right: 0.5rem
}
.btn::before{
  display: inline-block;
  content: '';
  height: 5px;
  width: 5px;
  border: solid 2px #a16b47;
  border-radius: 8px;
  margin-right: 1rem

}
.hoverc{
  background-color: #eee
}