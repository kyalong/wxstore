<view>
  <view class='main'>
    <view class='title'>订单列表</view>
  </view>
</view>
<view class='filter'>
  <block wx:for='{{titles}}' wx:key=''>
    <view class='filter{{index}}' data-title='{{index}}' style='{{title==index?"border-bottom: solid 2px #a16b47;color:#a16b47":""}}' bindtap='selected'>{{item}}
    </view>
  </block>
</view>
<view class='list'>
  <block wx:if='{{detail==undefined}}'>
    <text class='tips'>没有订单信息</text>
  </block>
  <block wx:else>
    <scroll-view  scroll-y scroll-into-view="{{toview}}" enable-back-to-top="true" style='height:{{h}}px;' scroll-with-animation='true'>
      <block wx:for="{{detail}}" wx:key='id'>
        <view class='main' id='s{{item.id}}' data-types='{{item.types}}'>
          <view catchtap='detail' data-ids='{{item.id}}'>
            <view class='card serinum'>
              <text class='svgicon'></text>
              <text>订单号: {{item.serinum}}</text>
              <text>{{m1.rmap[item.state]}}</text>
            </view>
            <block wx:for='{{item.orderitem}}' wx:for-index='sku' wx:for-item='detail' wx:key=''>
              <view class='item' catchtap='selected'>
                <image src='{{detail[3]}}' class='thum' style='height:{{h/6}}px;width:{{h/6}}px'></image>
                <view class='price'>
                  <text>{{detail[0]}}</text>
                  <text>尺码:{{detail[1]}}</text>
                  <text>￥{{detail[2]}}</text>
                </view>
                <view class='num'>
                  <text>{{detail[4]}}</text>
                </view>
              </view>
            </block>
          </view>
          <view class='card status'>
            <!-- <button id='modify' bindtap='modify' data-num='{{item.id}}' plain='true'>
            <text>修改订单</text>
          </button> -->
            <button id='del' bindtap='status' data-num='{{item.id}}' wx:if='{{item.btnstate}}' plain='true'>
              <text>取消订单</text>
            </button>
            <button id='done' bindtap='status' data-num='{{item.id}}' wx:if='{{item.btnstate}}' plain='true'>
              <text>确认收货</text>
            </button>
          </view>
        </view>
      </block>
    </scroll-view>
  </block>
</view>