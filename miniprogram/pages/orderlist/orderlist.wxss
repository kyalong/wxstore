.serinum>text:nth-child(2) {
  flex-grow: 1;
}

.serinum>text:last-child {
  color: transparent;
  margin-right: 0.5rem;
  background-image: linear-gradient(13.5deg, #ff9000, #ff5000);
  -webkit-background-clip: text;
}

.item {
  display: flex;
  widows: 100%;
  margin: 0.25rem 0.5rem;
  justify-content: space-between;
}

.item>image {
  background-color: transparent;
  border-radius: 5pt;
}

.price {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding-left: 0.5rem;
  justify-content: space-around;
  font-size: smaller;
  width: calc(0.52*750rpx);
}

.price>text:first-child {
  /* font-size: 0.9rem; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.num {
  padding: 0 0.25rem;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #a16b47;
  font-size: smaller;
}

.num>text:last-child {
  /* font-size: smaller; */
  color: silver;
  text-align: right;
}

.list {
  display: flex;
  flex-direction: column;
}

.status {
  display: flex;
  justify-content: space-around;
  border: 0;
}

button {
  padding: 0;
  margin: 0.5rem;
  border: solid 1px transparent;
  width: 90px;
  height: 24px;
  border-radius: 12px;
  font-size: medium;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(-166.5deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 1)),
                      linear-gradient(13.5deg, #b87333, #a16b47);
  background-clip: padding-box, border-box;
  color: #a16b47
}

