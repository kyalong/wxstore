.view {
  display: flex;
  height: 64px;
  align-items: flex-end;
}

.view>image {
  width: 24px;
  height: 24px;
  background-color: transparent;
  transform: rotate(180deg);
  margin: 26px 16px 8px;
}

.maintitle {
  display: flex;
  flex-direction: column;
  padding: 1rem;
  align-items: flex-start;
}

.main {
  display: flex;
  flex-direction: column;
  margin: 0.5rem;
  border-radius: 4px;
  /* box-shadow: 0 0 1px #a16b47; */
  font-size: medium;
  background-color: white;
}

.title {
  font-size: 30pt;
  align-self: stretch;
}

.title::after {
  display: inline-block;
  content: '';
  height: 8px;
  width: 8px;
  border: solid 2px #a16b47;
  border-radius: 8px;
  position: relative;
  bottom: 35px;
  right: -5px;
}

.filter {
  margin: 0 0.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 13pt;
}

.filter view {
  padding: 0.25rem;
  text-align: center;
}

.scroll-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f6f6f6;
}

::-webkit-scrollbar {
  display: none;
}

.serinum {
  display: flex;
  justify-content: flex-start;
}

.serinum text {
  margin: 0.5rem;
}

