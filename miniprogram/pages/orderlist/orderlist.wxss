.loan {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end
}

.loan text {
  margin: 0.5rem;
}
.loan>text:first-child{
  font-size: smaller
}

.end {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 16px 0;
  color: silver;
}

.end>text:first-child {
  font-size: 1.5rem;
  font-family: little2;
}

.end>text:last-child {
  font-size: 0.9rem;
  font-family: little;
}

.button-hover {
  background: linear-gradient(13.5deg, #b87333, #a16b47);
  color: white;
}

.tips {
  position: fixed;
  top: 50%;
  left: 30%;
  color: gainsboro;
  font-family: little;
  font-size: 20pt;
  text-align: center;
}
