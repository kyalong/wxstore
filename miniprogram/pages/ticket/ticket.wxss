.view {
  width: 100%;
  display: flex;
  height: 64px;
  align-items: flex-end;
  justify-content: center;
}

.view>image {
  position: fixed;
  top: 0;
  left: 0;
  margin: 30px 16px 10px;
  width: 24px;
  height: 24px;
  background-color: transparent;
  transform: rotate(180deg);
}

.view>text {
  font-size: 1rem;
  margin: 30px 16px 12px;
  font-family: little2;
  transition: all 0.5s linear;
}

.ticket {
  border-radius: 10pt;
  box-shadow: 0 0 5px lightgray;
  margin: 16px;
  display: flex;
  height: calc((750rpx - 32px) /(1.618 * 1.618));
  flex-direction: column;
}

.expired {
  padding: 0.25rem 0.5rem;
  border-bottom: dashed 1px lightgray;
  font-size: medium;
}

.maincontent {
  flex-grow: 1;
  display: flex;
  margin: 0.5rem;
}

.content {
  border-radius: 10pt;
  background-color: rgba(167, 107, 71, 0.4);
  width: calc((100% - 2rem)*0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: medium;
}

.content>text:first-child {
  font-size: xx-large;
}

.btn {
  flex-grow: 1;
  border-radius: 10pt;
  background-color: rgba(167, 107, 71, 0.4);
  display: flex;
  align-items: center;
}

.btn::before {
  content: '';
  border-left: dashed 1px white;
  display: block;
  height: calc(100% - 20pt);
}

