page {
  display: flex;
  flex-direction: column;
  /* justify-content: flex-start */
}

.view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 64px

}
::-webkit-scrollbar{
  display: none
}

.view>image {
  position: fixed;
  top: 0;
  left: 0;
  margin: 30px 16px 10px;
  width: 24px;
  height: 24px;
  background-color: transparent;
}
.view>text{
  text-align: center;
  font-size: 1rem;
  margin: 30px 16px 12px;
  font-family: little2;
  transition: all 0.5s linear
}

.h1 {
  display: flex;
  justify-content: space-between;
  padding: 1rem 1rem 0;
  /* align-items: center; */
}

.main {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.title {
  font-size: 30pt;
  align-self: stretch;
}

.title::after {
  display: inline-block;
  content: '';
  height: 8px;
  width: 8px;
  border: solid 2px #a16b47;
  border-radius: 8px;
  position: relative;
  bottom: 35px;
  right: -5px;
}

.subtitle {
  font-size: 13pt;
  margin-top: 0.5rem;
  padding-left: 0.25rem;
}

swiper-item {
  display: flex;
}

.card {
  display: flex;
  flex-direction: column;
  border-radius: 5pt;
  margin: 0 8px;
  box-shadow: 0 5px 10px lightgray;
}

.card>image {
  background-color: #f6f6f6;
  width: 100%;
  height: 70.7%;
  border-top-left-radius: 5pt;
  border-top-right-radius: 5pt;
}

.item {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0.25rem;
}

.itemname {
  font-size: medium;
}

.price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #a16b47;
  font-size: medium
}

.icon {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.icon>image {
  width: 25px;
  height: 25px;
  background-color: transparent;
}

.end {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 16px;
  color: silver;
}

.end>text:first-child {
  font-size: 1.5rem;
  font-family: little2;
}

.end>text:last-child {
  font-size: 0.9rem;
  font-family: little;
}

.hoverc {
  opacity: 0.7;
}

.hoverb {
  background-color: silver;
}
